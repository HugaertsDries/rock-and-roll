<div class="rr-sidebar">
  {{!-- bands listing pane --}}
    <ul class="rr-list">
      {{#each this.model as |band|}}
          <li>
              <LinkTo @route="bands.band" @model={{band.id}} class="rr-band-link">
                {{band.name}}
                  <span class="rr-pointer">
                    {{fa-icon "angle-right"}}
                  </span>
              </LinkTo>
          </li>
      {{/each}}
    </ul>
  {{!-- add new band button --}}
  {{#if this.isAddingBand}}
      <form class="rr-inline-form" {{on "submit" this.saveBand}}>
          <Input @type="text" @value={{this.newBandName}} class="rr-input" placeholder="New band"
                 data-test-rr="new-band-input"/>
          <button type="submit" disabled={{this.isAddButtonDisabled}} class="rr-action-button">
              Add
          </button>
          <button class="rr-cancel-icon" {{on "click" this.toggleAddBand}}>
            {{fa-icon "times"}}
          </button>
      </form>
  {{else}}
      <label {{on "click" this.toggleAddBand}}>
        {{fa-icon "plus"}} <span class="ml1">Add new band</span>
      </label>
  {{/if}}
</div>
{{!-- band songs listing pane --}}
<div class="rr-main-panel">
  {{outlet}}
</div>